  float discount=0.85;
  bool y="first class";
  bool x="second class";
  
 
  printf("Please enter the weight of your letter in grams: ");
  scanf("%f", &weight);

if (weight>750){
    printf("This weight is not supported for letters");
    return 0;}

  if (weight>100){
    printf("Do you prefer second class? Enter either x for Second Class or y for First Class: ");
  scanf("%s", &x);}
  
     if (weight<=100){
      printf("Your price is: £%.2f", basicprice);
    }else if(weight>100 && weight<250&& y){
      float finalcost = 3.56 * 0.85;
      printf("Your letter cost is: £%.2f", finalcost);
    }else if(weight>251&&weight<500&& y){
    float finalcost = 4.04 * 0.85;
