#include <stdio.h>

int main() {
  double numberA;
  double numberB;
  int operationChoice;
  printf("Please enter a first number: ");
  scanf("%lf", &numberA);
  printf("Please enter a second number: ");
  scanf("%lf", &numberB);
  printf("What calculation do you want to do?\n Enter 1 for Addition\n Enter 2 for Subtraction\n Enter 3 for Multiplication\n Enter 4 for division\n What do you wnt to do: ");
  scanf("%d", &operationChoice);
  
if (operationChoice == 1)
{
  double finalAnswer = numberA + numberB;
  printf("Your answer is: %lf", finalAnswer);
}
else if(operationChoice == 2)
{
  double finalAnswer = numberA - numberB;
  printf("Your answer is: %lf", finalAnswer);
}
else if(operationChoice == 3)
{
  double finalAnswer = numberA * numberB;
  printf("Your answer is: %lf", finalAnswer);
}
else if(operationChoice == 4)
{
  double finalAnswer = numberA / numberB;
  printf("Your answer is: %lf", finalAnswer);
}
else
{
printf("Please restart the programme and enter a valid number");
}
 
}
